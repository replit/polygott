#!/bin/bash

set -e

CODE=0

if [[ -n "${LANGS}" && ",${LANGS}," != *",ballerina,"* ]]; then
	echo S 'ballerina:*'
	exit $CODE
fi

find /home/runner -mindepth 1 -maxdepth 1 -exec rm -rf {} \;
polygott-lang-setup -l 'ballerina'

# ballerina:hello
SUCCESS=true
OUTPUT="$(echo 'aW1wb3J0IGJhbGxlcmluYS9pbzsNCnB1YmxpYyBmdW5jdGlvbiBtYWluKCkgew0KICAgIGlvOnByaW50bG4oIkhlbGxvLCBXb3JsZCEiKTsNCn0NCg==' | \
          base64 --decode | \
          run-project -s -l 'ballerina' \
       )" || SUCCESS=false
if [[ "${SUCCESS}" == "true" ]]; then
  echo "${OUTPUT}" | \
    diff --unified --ignore-trailing-space --label 'ballerina' \
      <( echo 'SGVsbG8sIFdvcmxkIQo=' | base64 --decode ) \
      - || \
  SUCCESS=false
else
  echo "run failed: \"${OUTPUT}\", exit code $?" >&2
fi

if [[ "${SUCCESS}" == "true" ]]; then
  echo ✓ 'ballerina:hello'
else
  echo ❌ 'ballerina:hello'
  CODE=1
fi

exit $CODE
